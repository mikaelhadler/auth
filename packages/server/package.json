{
  "name": "@auth/server",
  "version": "1.0.0",
  "description": "Clean Architecture project",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests --noStackTrace --runInBand --detectOpenHandles",
    "test:silent": "npm test -- --silent",
    "test:staged": "npm test:silent -- --findRelatedTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:ci": "npm test:silent -- --coverage",
    "clear": "rm -rf dist",
    "build": "npm run clear && npx tsc -p tsconfig-build.json"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/faker": "^5.5.1",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.4"
  }
}